@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    if (User.IsInRole("admin"))
    {
        <ul class="navbar-nav">
            <li class="nav-item">@Html.ActionLink("Admin Panel", "Index", "Admin", new { area = "" }, new { @class = "nav-link" })</li>
        </ul>
    }
    else
    {
        <ul class="navbar-nav">
            <li class="nav-item">@Html.ActionLink("Profile", "UserProfile", "Account", new { area = "" }, new { @class = "nav-link" })</li>
            <li class="nav-item">@Html.ActionLink("Accounts", "Accounts", "Card", new { area = "" }, new { @class = "nav-link" })</li>
            <li class="nav-item">@Html.ActionLink("Payments", "Index", "Payment", new { area = "" }, new { @class = "nav-link" })</li>
        </ul>
    }

}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
        <li class="nav-item">@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
        <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
    </ul>
}
